https://www.geeksforgeeks.org/stock-buy-sell/


#include <iostream>
#include <bits/stdc++.h>
#include <algorithm>
using namespace std;


int n;

void BuyAndSell(int price[]){
    int i=0;
    while(i<n-1){
        while((i<n-1) && price[i+1] < price[i])
            i++;
        
        
        if(i==n-1)
            break;
        
        int buy = i++;
        
        while((i<n) && price[i] >= price[i-1])
            i++;
        
        int sell = i-1;
        cout << "Buy on day: " << buy
			<< "\t Sell on day: " << sell << endl;
    }
}

int main(){
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++)
        cin>>a[i];
    
    BuyAndSell(a);
    
    return 0;
}
