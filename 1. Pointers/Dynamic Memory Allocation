#include <iostream>
using namespace std;

int main() {
    // dynamic memory allocation for a variable
    int *p = new int;
    *p = 10;
    cout<<p<<endl;
    cout<<*p<<endl;

    delete p;

    // dynamic memory allocation for a 1-D array
    int n1;
    cin>>n1;
    int *p1 = new int[n1];
    for(int i=0;i<n1;i++)
        cin>>p1[i];

    for(int i=0;i<n1;i++)
        cout<<p1[i]<<" ";
    cout<<endl;    

    delete [] p1;    

    // dynamic memoty allocation for a 2-D array
    int n, m;
    cin>>n>>m;
    int **p2 = new int*[n]; 
    for(int i=0;i<n;i++){
        p2[i] = new int[m];
        for(int j=0;j<m;j++)
            cin>>p2[i][j];
    }

    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            cout<<p2[i][j]<<" ";
        }
        cout<<endl;
    }

    for(int i=0;i<n;i++)
        delete [] p2[i];

    delete [] p2;

    return 0;
}
